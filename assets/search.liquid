{% assign docs = site.collections | map: "docs" %}
{% assign flat_docs = docs | flatten %}
{% for post in flat_docs %}

{
    "id": {
        { post.id | replace: '/', '-' | jsonify
        }
    },
    "title": {
        { post.title | jsonify  }
    },
    "author": {
        { post.author | jsonify }
    },
    "tags": [
        {% for tag in post.tags %}{
            { tag | jsonify }
        }{% unless forloop.last %},
        {% endunless %}{% endfor %}
    ],
    "url": {
        { post.url | jsonify }
    },
    "date": {
        { post.date | date: '%Y-%m-%d' | jsonify}
    },
    "content": {
        { post.content | strip_html | strip_newlines | jsonify}
    }
}{% unless forloop.last %},
{% endunless %}
{% endfor %}
]